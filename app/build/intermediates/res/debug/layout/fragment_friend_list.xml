<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2186C5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout"
        android:background="#4262A0"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal|center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="친구 목록"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:id="@+id/textView3" />

        <com.andexert.library.RippleView
            android:id="@+id/more2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:rv_rippleDuration="150"
            app:rv_centered="false"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/bt_addfriend"
                android:background="@drawable/ic_action_addfriend"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="10dp" />

        </com.andexert.library.RippleView>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/bg05"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="420dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_friend_listView"
        android:layout_below="@+id/relativeLayout"
        android:scrollbars="none"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/Users/eunjooim/Dropbox/debandroid-workspace/cardtalk_middle/app/src/main/res/layout/fragment_friend_list.xml -->