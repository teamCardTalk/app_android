<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:background="#2185c5"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivChatIcon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chat nickname"
            android:textSize="10sp"
            android:id="@+id/tvChatNickname"
            android:layout_marginLeft="6dp"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
                android:id="@+id/tvChatContent"
                android:textSize="12sp"

                android:layout_gravity="center_vertical"
                android:background="@drawable/chat_balloon"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:layout_weight="1" />

            <!--android:focusable="false"-->
            <!--android:clickable="false"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="date and time"
                android:id="@+id/tvChatTime"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_marginRight="6dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
