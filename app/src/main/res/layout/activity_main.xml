<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#4262A0"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/bt_articleList"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_articlelist"
                android:background="#4262A0" />

            <ImageButton
                android:id="@+id/bt_chatRooms"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_chatrooms"
                android:background="#4262A0" />

            <ImageButton
                android:id="@+id/bt_friends"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_friends"
                android:background="#4262A0"/>

            <ImageButton
                android:id="@+id/bt_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_setting"
                android:background="#4262A0"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>